<UserControl x:Class="Owmeta.Display.FocusTargetsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Owmeta.Display">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Vulnerable Teammates Section (Left - under Blue Team) -->
        <StackPanel x:Name="VulnerableSection" Grid.Column="0" HorizontalAlignment="Left" Margin="0,0,20,0">
            <TextBlock Text="VULNERABLE TEAMMATES"
                      FontSize="14"
                      FontWeight="Bold"
                      Foreground="#F43F5E"
                      Margin="0,0,0,10"/>
            <ItemsControl x:Name="VulnerableList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#BF111827"
                                CornerRadius="10"
                                Padding="14"
                                Margin="0,0,12,0"
                                BorderBrush="#F43F5E"
                                BorderThickness="1">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="12" ShadowDepth="0" Opacity="0.3"/>
                            </Border.Effect>
                            <StackPanel>
                                <!-- Hero Header -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <Grid Width="66" Height="66" Margin="-8,0,6,0">
                                        <!-- Glow layer -->
                                        <Ellipse Width="66" Height="66" Fill="#EF4444">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsHardCountered}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                            <Ellipse.Effect>
                                                <BlurEffect Radius="12"/>
                                            </Ellipse.Effect>
                                        </Ellipse>
                                        <Ellipse Width="50" Height="50">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{Binding HeroIcon}" Stretch="UniformToFill"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <Ellipse Width="50" Height="50" StrokeThickness="2" Stroke="#F43F5E" Fill="Transparent"/>
                                    </Grid>

                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding HeroName}"
                                                  FontSize="18"
                                                  FontWeight="Bold"
                                                  Foreground="White"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                            <Border Background="{Binding ScoreBackgroundBrush}"
                                                    CornerRadius="4"
                                                    Padding="6,2"
                                                    Margin="0,0,6,0">
                                                <TextBlock Text="{Binding ScoreValue, StringFormat='{}{0:+#;-#;0}'}"
                                                          FontSize="13"
                                                          FontWeight="Bold"
                                                          Foreground="{Binding ScoreBrush}"/>
                                            </Border>
                                            <ItemsControl ItemsSource="{Binding Compositions}" VerticalAlignment="Center">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="{Binding Background}"
                                                                CornerRadius="3"
                                                                Padding="5,2"
                                                                Margin="0,0,3,0">
                                                            <TextBlock Text="{Binding Name}"
                                                                      FontSize="9"
                                                                      FontWeight="SemiBold"
                                                                      Foreground="{Binding Foreground}"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Countered By row -->
                                <StackPanel Margin="0,0,0,6">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasCounteredBy}" Value="False">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <ItemsControl ItemsSource="{Binding CounteredBy}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Width="44" Height="44" Margin="-2,0,2,0" ToolTip="{Binding Comment}">
                                                    <Ellipse Width="44" Height="44" Fill="#EF4444">
                                                        <Ellipse.Style>
                                                            <Style TargetType="Ellipse">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsHard}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Ellipse.Style>
                                                        <Ellipse.Effect>
                                                            <BlurEffect Radius="10"/>
                                                        </Ellipse.Effect>
                                                    </Ellipse>
                                                    <Ellipse Width="32" Height="32">
                                                        <Ellipse.Fill>
                                                            <ImageBrush ImageSource="{Binding Icon}" Stretch="UniformToFill"/>
                                                        </Ellipse.Fill>
                                                    </Ellipse>
                                                    <Ellipse Width="32" Height="32" StrokeThickness="2" Stroke="#F43F5E" Fill="Transparent"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>

                                <!-- Synergies row -->
                                <StackPanel>
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasSynergies}" Value="False">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <ItemsControl ItemsSource="{Binding Synergies}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Width="44" Height="44" Margin="-2,0,2,0" ToolTip="{Binding Comment}">
                                                    <Ellipse Width="32" Height="32">
                                                        <Ellipse.Fill>
                                                            <ImageBrush ImageSource="{Binding Icon}" Stretch="UniformToFill"/>
                                                        </Ellipse.Fill>
                                                    </Ellipse>
                                                    <Ellipse Width="32" Height="32" StrokeThickness="2" Stroke="#3B82F6" Fill="Transparent"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <!-- Dangerous Enemies Section (Right - under Red Team) -->
        <StackPanel x:Name="DangerousSection" Grid.Column="1" HorizontalAlignment="Right">
            <TextBlock Text="DANGEROUS ENEMIES"
                      FontSize="14"
                      FontWeight="Bold"
                      Foreground="#F97316"
                      Margin="0,0,0,10"/>
            <ItemsControl x:Name="DangerousList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#BF111827"
                                CornerRadius="10"
                                Padding="14"
                                Margin="0,0,12,0"
                                BorderBrush="#F97316"
                                BorderThickness="1">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="12" ShadowDepth="0" Opacity="0.3"/>
                            </Border.Effect>
                            <StackPanel>
                                <!-- Hero Header -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <Grid Width="66" Height="66" Margin="-8,0,6,0">
                                        <!-- Glow layer -->
                                        <Ellipse Width="66" Height="66" Fill="#F97316">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsHighThreat}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                            <Ellipse.Effect>
                                                <BlurEffect Radius="12"/>
                                            </Ellipse.Effect>
                                        </Ellipse>
                                        <Ellipse Width="50" Height="50">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{Binding HeroIcon}" Stretch="UniformToFill"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <Ellipse Width="50" Height="50" StrokeThickness="2" Stroke="#F97316" Fill="Transparent"/>
                                    </Grid>

                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding HeroName}"
                                                  FontSize="18"
                                                  FontWeight="Bold"
                                                  Foreground="White"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                            <Border Background="{Binding ScoreBackgroundBrush}"
                                                    CornerRadius="4"
                                                    Padding="6,2"
                                                    Margin="0,0,6,0">
                                                <TextBlock Text="{Binding ScoreValue, StringFormat='{}{0:+#;-#;0}'}"
                                                          FontSize="13"
                                                          FontWeight="Bold"
                                                          Foreground="{Binding ScoreBrush}"/>
                                            </Border>
                                            <ItemsControl ItemsSource="{Binding Compositions}" VerticalAlignment="Center">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="{Binding Background}"
                                                                CornerRadius="3"
                                                                Padding="5,2"
                                                                Margin="0,0,3,0">
                                                            <TextBlock Text="{Binding Name}"
                                                                      FontSize="9"
                                                                      FontWeight="SemiBold"
                                                                      Foreground="{Binding Foreground}"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Counters (who they counter on your team) -->
                                <StackPanel Margin="0,0,0,6">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasCounters}" Value="False">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <ItemsControl ItemsSource="{Binding Counters}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Width="44" Height="44" Margin="-2,0,2,0" ToolTip="{Binding Comment}">
                                                    <Ellipse Width="44" Height="44" Fill="#F97316">
                                                        <Ellipse.Style>
                                                            <Style TargetType="Ellipse">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsHard}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Ellipse.Style>
                                                        <Ellipse.Effect>
                                                            <BlurEffect Radius="10"/>
                                                        </Ellipse.Effect>
                                                    </Ellipse>
                                                    <Ellipse Width="32" Height="32">
                                                        <Ellipse.Fill>
                                                            <ImageBrush ImageSource="{Binding Icon}" Stretch="UniformToFill"/>
                                                        </Ellipse.Fill>
                                                    </Ellipse>
                                                    <Ellipse Width="32" Height="32" StrokeThickness="2" Stroke="#F97316" Fill="Transparent"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>

                                <!-- Countered By (who on your team counters them) -->
                                <StackPanel>
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasCounteredBy}" Value="False">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <ItemsControl ItemsSource="{Binding CounteredBy}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Width="44" Height="44" Margin="-2,0,2,0" ToolTip="{Binding Comment}">
                                                    <Ellipse Width="44" Height="44" Fill="#22C55E">
                                                        <Ellipse.Style>
                                                            <Style TargetType="Ellipse">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsHard}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Ellipse.Style>
                                                        <Ellipse.Effect>
                                                            <BlurEffect Radius="10"/>
                                                        </Ellipse.Effect>
                                                    </Ellipse>
                                                    <Ellipse Width="32" Height="32">
                                                        <Ellipse.Fill>
                                                            <ImageBrush ImageSource="{Binding Icon}" Stretch="UniformToFill"/>
                                                        </Ellipse.Fill>
                                                    </Ellipse>
                                                    <Ellipse Width="32" Height="32" StrokeThickness="2" Stroke="#10B981" Fill="Transparent"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</UserControl>
