<UserControl x:Class="Owmeta.Display.SwapSuggestionsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Owmeta.Display">

    <StackPanel>
        <!-- Current Hero Card - Full details (outside swap container) -->
        <Border x:Name="CurrentHeroCard"
                Background="#BF111827"
                CornerRadius="12"
                Padding="20"
                BorderBrush="#F59E0B"
                BorderThickness="2"
                Margin="0,0,0,16"
                HorizontalAlignment="Stretch">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="16" ShadowDepth="0" Opacity="0.4"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <!-- Hero Identity -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0,0,40,0">
                        <Border Width="72" Height="72"
                                CornerRadius="36"
                                ClipToBounds="True"
                                Margin="0,0,16,0">
                            <Image Source="{Binding HeroIcon}"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Border>

                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="YOU ARE"
                                      FontSize="13"
                                      FontWeight="Medium"
                                      Foreground="#9CA3AF"/>
                            <TextBlock Text="{Binding HeroName}"
                                      FontSize="26"
                                      FontWeight="Bold"
                                      Foreground="White"/>
                            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                <Border Background="{Binding ScoreBackgroundBrush}"
                                        CornerRadius="5"
                                        Padding="10,4"
                                        Margin="0,0,8,0">
                                    <TextBlock Text="{Binding ScoreValue, StringFormat='{}{0:+#;-#;0}'}"
                                              FontSize="16"
                                              FontWeight="Bold"
                                              Foreground="{Binding ScoreBrush}"/>
                                </Border>
                                <ItemsControl ItemsSource="{Binding Compositions}" VerticalAlignment="Center">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{Binding Background}"
                                                    CornerRadius="4"
                                                    Padding="8,4"
                                                    Margin="0,0,5,0">
                                                <TextBlock Text="{Binding Name}"
                                                          FontSize="12"
                                                          FontWeight="SemiBold"
                                                          Foreground="{Binding Foreground}"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <!-- Incompatible Compositions -->
                                <ItemsControl ItemsSource="{Binding IncompatibleCompositions}" VerticalAlignment="Center">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#33EF4444"
                                                    BorderBrush="#EF4444"
                                                    BorderThickness="1"
                                                    CornerRadius="4"
                                                    Padding="8,4"
                                                    Margin="0,0,5,0">
                                                <TextBlock Text="{Binding Name}"
                                                          FontSize="12"
                                                          FontWeight="SemiBold"
                                                          Foreground="#EF4444">
                                                    <TextBlock.TextDecorations>
                                                        <TextDecoration Location="Strikethrough">
                                                            <TextDecoration.Pen>
                                                                <Pen Brush="#EF4444" Thickness="3"/>
                                                            </TextDecoration.Pen>
                                                        </TextDecoration>
                                                    </TextBlock.TextDecorations>
                                                </TextBlock>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                       Visibility="{Binding MapStrengthVisibility}"
                                       Margin="0,6,0,0">
                                <Viewbox Width="16" Height="16" Margin="0,0,5,0">
                                    <Path Fill="{Binding MapStrengthBrush}"
                                          Data="M15,19L9,16.89V5L15,7.11M20.5,3C20.44,3 20.39,3 20.34,3L15,5.1L9,3L3.36,4.9C3.15,4.97 3,5.15 3,5.38V20.5A0.5,0.5 0 0,0 3.5,21C3.55,21 3.61,21 3.66,20.97L9,18.9L15,21L20.64,19.1C20.85,19 21,18.85 21,18.62V3.5A0.5,0.5 0 0,0 20.5,3Z"/>
                                </Viewbox>
                                <TextBlock Text="{Binding MapStrengthText}"
                                          FontSize="14"
                                          FontWeight="Medium"
                                          Foreground="{Binding MapStrengthBrush}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!-- Focus Targets (Counters) with comments -->
                    <StackPanel Margin="0,0,50,0" VerticalAlignment="Top">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasCounters}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="FOCUS TARGETS"
                                  FontSize="17"
                                  FontWeight="Bold"
                                  Foreground="#10B981"
                                  Margin="0,0,0,12"/>
                        <ItemsControl ItemsSource="{Binding Counters}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <Grid Width="66" Height="66" Margin="-8,0,6,0">
                                            <!-- Glow layer for hard counters -->
                                            <Ellipse Width="66" Height="66" Fill="#22C55E">
                                                <Ellipse.Style>
                                                    <Style TargetType="Ellipse">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsHard}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Ellipse.Style>
                                                <Ellipse.Effect>
                                                    <BlurEffect Radius="12"/>
                                                </Ellipse.Effect>
                                            </Ellipse>
                                            <!-- Hero image -->
                                            <Ellipse Width="50" Height="50">
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{Binding Icon}" Stretch="UniformToFill"/>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                            <!-- Ring overlay -->
                                            <Ellipse Width="50" Height="50" StrokeThickness="2" Stroke="#10B981" Fill="Transparent"/>
                                        </Grid>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}"
                                                      FontSize="18"
                                                      FontWeight="SemiBold"
                                                      Foreground="White"/>
                                            <TextBlock Text="{Binding Comment}"
                                                      FontSize="15"
                                                      Foreground="#9CA3AF"
                                                      MaxWidth="480"
                                                      TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Avoid (Countered By) with comments -->
                    <StackPanel Margin="0,0,50,0" VerticalAlignment="Top">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasCounteredBy}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="AVOID"
                                  FontSize="17"
                                  FontWeight="Bold"
                                  Foreground="#F43F5E"
                                  Margin="0,0,0,12"/>
                        <ItemsControl ItemsSource="{Binding CounteredBy}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <Grid Width="66" Height="66" Margin="-8,0,6,0">
                                            <!-- Glow layer for hard counters -->
                                            <Ellipse Width="66" Height="66" Fill="#EF4444">
                                                <Ellipse.Style>
                                                    <Style TargetType="Ellipse">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsHard}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Ellipse.Style>
                                                <Ellipse.Effect>
                                                    <BlurEffect Radius="12"/>
                                                </Ellipse.Effect>
                                            </Ellipse>
                                            <!-- Hero image -->
                                            <Ellipse Width="50" Height="50">
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{Binding Icon}" Stretch="UniformToFill"/>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                            <!-- Ring overlay -->
                                            <Ellipse Width="50" Height="50" StrokeThickness="2" Stroke="#F43F5E" Fill="Transparent"/>
                                        </Grid>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}"
                                                      FontSize="18"
                                                      FontWeight="SemiBold"
                                                      Foreground="White"/>
                                            <TextBlock Text="{Binding Comment}"
                                                      FontSize="15"
                                                      Foreground="#9CA3AF"
                                                      MaxWidth="480"
                                                      TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Synergies with comments -->
                    <StackPanel VerticalAlignment="Top">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasSynergies}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="SYNERGIES"
                                  FontSize="17"
                                  FontWeight="Bold"
                                  Foreground="#3B82F6"
                                  Margin="0,0,0,12"/>
                        <ItemsControl ItemsSource="{Binding Synergies}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <Grid Width="50" Height="50" Margin="0,0,14,0">
                                            <Ellipse Width="50" Height="50">
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{Binding Icon}" Stretch="UniformToFill"/>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                            <Ellipse Width="50" Height="50" StrokeThickness="2" Stroke="#3B82F6" Fill="Transparent"/>
                                        </Grid>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}"
                                                      FontSize="18"
                                                      FontWeight="SemiBold"
                                                      Foreground="White"/>
                                            <TextBlock Text="{Binding Comment}"
                                                      FontSize="15"
                                                      Foreground="#9CA3AF"
                                                      MaxWidth="480"
                                                      TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>
        </Border>

        <!-- Swap Suggestions Section -->
        <Border Background="#BF111827"
                CornerRadius="16"
                Padding="20,16">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="SWAP SUGGESTIONS"
                          FontSize="14"
                          FontWeight="Bold"
                          Foreground="#F59E0B"
                          Margin="0,0,0,12"/>

                <ItemsControl x:Name="SuggestionsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="7"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- Swap Hero Card - Collapsed style -->
                        <Border Background="#CC1E293B"
                                CornerRadius="10"
                                Padding="10"
                                Margin="6">
                            <Grid>
                                <!-- Map Strength (Top Right) -->
                                <StackPanel Orientation="Horizontal"
                                           Visibility="{Binding MapStrengthVisibility}"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Top"
                                           Margin="0,-2,-2,0">
                                    <Viewbox Width="14" Height="14" Margin="0,0,3,0">
                                        <Path Fill="{Binding MapStrengthBrush}"
                                              Data="M15,19L9,16.89V5L15,7.11M20.5,3C20.44,3 20.39,3 20.34,3L15,5.1L9,3L3.36,4.9C3.15,4.97 3,5.15 3,5.38V20.5A0.5,0.5 0 0,0 3.5,21C3.55,21 3.61,21 3.66,20.97L9,18.9L15,21L20.64,19.1C20.85,19 21,18.85 21,18.62V3.5A0.5,0.5 0 0,0 20.5,3Z"/>
                                    </Viewbox>
                                    <TextBlock Text="{Binding MapStrengthText}"
                                              FontSize="11"
                                              FontWeight="Medium"
                                              Foreground="{Binding MapStrengthBrush}"/>
                                </StackPanel>

                                <StackPanel>
                                    <!-- Hero Header -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                        <Border Width="60" Height="60"
                                                CornerRadius="30"
                                                ClipToBounds="True"
                                                Margin="0,0,12,0">
                                            <Image Source="{Binding HeroIcon}"
                                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                                        </Border>

                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{Binding HeroName}"
                                                      FontSize="22"
                                                      FontWeight="Bold"
                                                      Foreground="White"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <Border Background="{Binding ScoreBackgroundBrush}"
                                                        CornerRadius="4"
                                                        Padding="8,3"
                                                        Margin="0,0,6,0">
                                                    <TextBlock Text="{Binding ScoreValue, StringFormat='{}{0:+#;-#;0}'}"
                                                              FontSize="18"
                                                              FontWeight="Bold"
                                                              Foreground="{Binding ScoreBrush}"/>
                                                </Border>
                                                <ItemsControl ItemsSource="{Binding Compositions}" VerticalAlignment="Center">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="{Binding Background}"
                                                                    CornerRadius="3"
                                                                    Padding="6,3"
                                                                    Margin="0,0,4,0">
                                                                <TextBlock Text="{Binding Name}"
                                                                          FontSize="13"
                                                                          FontWeight="SemiBold"
                                                                          Foreground="{Binding Foreground}"/>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                                <!-- Incompatible Compositions -->
                                                <ItemsControl ItemsSource="{Binding IncompatibleCompositions}" VerticalAlignment="Center">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="#33EF4444"
                                                                    BorderBrush="#EF4444"
                                                                    BorderThickness="1"
                                                                    CornerRadius="3"
                                                                    Padding="6,3"
                                                                    Margin="0,0,4,0">
                                                                <TextBlock Text="{Binding Name}"
                                                                          FontSize="13"
                                                                          FontWeight="SemiBold"
                                                                          Foreground="#EF4444">
                                                                    <TextBlock.TextDecorations>
                                                                        <TextDecoration Location="Strikethrough">
                                                                            <TextDecoration.Pen>
                                                                                <Pen Brush="#EF4444" Thickness="3"/>
                                                                            </TextDecoration.Pen>
                                                                        </TextDecoration>
                                                                    </TextBlock.TextDecorations>
                                                                </TextBlock>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>

                                <!-- Counters row - icons only -->
                                <StackPanel Margin="0,0,0,12">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasCounters}" Value="False">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <ItemsControl ItemsSource="{Binding Counters}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Width="50" Height="50" Margin="0,0,6,0" ToolTip="{Binding Comment}">
                                                    <!-- Glow layer for hard counters -->
                                                    <Ellipse Width="66" Height="66" Margin="-8" Fill="#22C55E">
                                                        <Ellipse.Style>
                                                            <Style TargetType="Ellipse">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsHard}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Ellipse.Style>
                                                        <Ellipse.Effect>
                                                            <BlurEffect Radius="12"/>
                                                        </Ellipse.Effect>
                                                    </Ellipse>
                                                    <!-- Hero image -->
                                                    <Ellipse Width="50" Height="50">
                                                        <Ellipse.Fill>
                                                            <ImageBrush ImageSource="{Binding Icon}" Stretch="UniformToFill"/>
                                                        </Ellipse.Fill>
                                                    </Ellipse>
                                                    <!-- Ring overlay -->
                                                    <Ellipse Width="50" Height="50" StrokeThickness="2" Stroke="#10B981" Fill="Transparent"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>

                                <!-- Countered By row - icons only -->
                                <StackPanel Margin="0,0,0,12">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasCounteredBy}" Value="False">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <ItemsControl ItemsSource="{Binding CounteredBy}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Width="50" Height="50" Margin="0,0,6,0" ToolTip="{Binding Comment}">
                                                    <!-- Glow layer for hard counters -->
                                                    <Ellipse Width="66" Height="66" Margin="-8" Fill="#EF4444">
                                                        <Ellipse.Style>
                                                            <Style TargetType="Ellipse">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsHard}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Ellipse.Style>
                                                        <Ellipse.Effect>
                                                            <BlurEffect Radius="12"/>
                                                        </Ellipse.Effect>
                                                    </Ellipse>
                                                    <!-- Hero image -->
                                                    <Ellipse Width="50" Height="50">
                                                        <Ellipse.Fill>
                                                            <ImageBrush ImageSource="{Binding Icon}" Stretch="UniformToFill"/>
                                                        </Ellipse.Fill>
                                                    </Ellipse>
                                                    <!-- Ring overlay -->
                                                    <Ellipse Width="50" Height="50" StrokeThickness="2" Stroke="#F43F5E" Fill="Transparent"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>

                                <!-- Synergies row - icons only -->
                                <StackPanel>
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasSynergies}" Value="False">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <ItemsControl ItemsSource="{Binding Synergies}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Width="50" Height="50" Margin="0,0,6,0" ToolTip="{Binding Comment}">
                                                    <Ellipse Width="50" Height="50">
                                                        <Ellipse.Fill>
                                                            <ImageBrush ImageSource="{Binding Icon}" Stretch="UniformToFill"/>
                                                        </Ellipse.Fill>
                                                    </Ellipse>
                                                    <Ellipse Width="50" Height="50" StrokeThickness="2" Stroke="#3B82F6" Fill="Transparent"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
