<UserControl x:Class="Owmeta.Display.AlertBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Owmeta.Display">

    <UserControl.Resources>
        <!-- Pulsing animation for critical alerts -->
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimation
                Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Opacity)"
                From="0.3" To="0.8" Duration="0:0:0.8" AutoReverse="True"/>
        </Storyboard>
    </UserControl.Resources>

    <!-- Main container - glassmorphism style -->
    <Border x:Name="MainBorder"
            Background="#BF111827"
            CornerRadius="12"
            Padding="20,12"
            MinHeight="60">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Alert Section (Left) -->
            <StackPanel x:Name="AlertSection"
                       Grid.Column="0"
                       Orientation="Horizontal"
                       VerticalAlignment="Center"
                       Visibility="Collapsed">

                <!-- Alert Icon -->
                <Border x:Name="AlertIconBorder"
                        Width="36" Height="36"
                        CornerRadius="18"
                        Background="#F43F5E"
                        Margin="0,0,12,0"
                        VerticalAlignment="Center">
                    <TextBlock Text="!"
                              FontSize="20"
                              FontWeight="Bold"
                              Foreground="White"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </Border>

                <!-- Alert Text -->
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="AlertTitle"
                              Text="HARD COUNTERED BY"
                              FontSize="12"
                              FontWeight="SemiBold"
                              Foreground="#F43F5E"
                              Margin="0,0,0,2"/>
                    <ItemsControl x:Name="CounteredByList">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,0,12,0">
                                    <Border Width="28" Height="28" CornerRadius="14" ClipToBounds="True" Margin="0,0,6,0">
                                        <Image Source="{Binding Icon}" RenderOptions.BitmapScalingMode="HighQuality"/>
                                    </Border>
                                    <TextBlock Text="{Binding Name}"
                                              FontSize="14"
                                              FontWeight="Medium"
                                              Foreground="White"
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>

            <!-- Opportunity Section (shown when no hard counters) -->
            <StackPanel x:Name="OpportunitySection"
                       Grid.Column="0"
                       Orientation="Horizontal"
                       VerticalAlignment="Center"
                       Visibility="Collapsed">

                <Border Width="36" Height="36"
                        CornerRadius="18"
                        Background="#10B981"
                        Margin="0,0,12,0"
                        VerticalAlignment="Center">
                    <TextBlock Text="✓"
                              FontSize="18"
                              FontWeight="Bold"
                              Foreground="White"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </Border>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="OpportunityTitle"
                              Text="OPPORTUNITY"
                              FontSize="12"
                              FontWeight="SemiBold"
                              Foreground="#10B981"
                              Margin="0,0,0,2"/>
                    <TextBlock x:Name="OpportunityText"
                              FontSize="14"
                              FontWeight="Medium"
                              Foreground="White"/>
                </StackPanel>
            </StackPanel>

            <!-- Separator -->
            <Rectangle Grid.Column="1"
                      Width="1"
                      Fill="#374151"
                      Margin="20,4"
                      Visibility="{Binding ElementName=AlertSection, Path=Visibility}"/>

            <!-- Top Swap Recommendation (Right) -->
            <StackPanel x:Name="SwapRecommendationSection"
                       Grid.Column="2"
                       Orientation="Horizontal"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right">

                <TextBlock Text="SWAP TO:"
                          FontSize="12"
                          FontWeight="SemiBold"
                          Foreground="#10B981"
                          VerticalAlignment="Center"
                          Margin="0,0,12,0"/>

                <!-- Recommended Hero -->
                <Border Width="44" Height="44"
                        CornerRadius="22"
                        ClipToBounds="True"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center">
                    <Border.Effect>
                        <DropShadowEffect Color="#10B981" BlurRadius="12" ShadowDepth="0" Opacity="0.5"/>
                    </Border.Effect>
                    <Image x:Name="RecommendedHeroIcon" RenderOptions.BitmapScalingMode="HighQuality"/>
                </Border>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="RecommendedHeroName"
                              FontSize="16"
                              FontWeight="SemiBold"
                              Foreground="White"/>
                    <TextBlock x:Name="RecommendedReason"
                              FontSize="12"
                              Foreground="#9CA3AF"
                              MaxWidth="300"
                              TextTrimming="CharacterEllipsis"/>
                </StackPanel>

                <!-- Score Stars -->
                <StackPanel x:Name="ScoreStars"
                           Orientation="Horizontal"
                           VerticalAlignment="Center"
                           Margin="16,0,0,0">
                    <TextBlock Text="★★★★★" FontSize="14" Foreground="#10B981"/>
                </StackPanel>
            </StackPanel>

            <!-- Empty State (shown when no alerts, opportunities, or suggestions) -->
            <TextBlock x:Name="EmptyStateText"
                      Grid.ColumnSpan="3"
                      Text="Take a screenshot to get hero analysis"
                      FontSize="13"
                      Foreground="#6B7280"
                      FontStyle="Italic"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Visibility="Collapsed"/>
        </Grid>
    </Border>
</UserControl>
